{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "lib"
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./typings/index.d.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "files": [
        "./src/annict.ts",
        "./src/http-client.ts",
        "./src/services/authorization-service.ts",
        "./src/services/episodes-service.ts",
        "./src/services/index.ts",
        "./src/services/me-service.ts",
        "./src/services/records-service.ts",
        "./src/services/works-service.ts",
        "./typings/index.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
